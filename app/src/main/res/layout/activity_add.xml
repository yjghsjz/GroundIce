<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".action.AddActivity">



    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/Theme.AppCompat.Light"
        >
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true"
            android:text="发布"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
        <ImageButton
            android:id="@+id/toolbar_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/ic_add"
            android:layout_marginRight="10dp"
            />
    </androidx.appcompat.widget.Toolbar>

    <EditText
        android:id="@+id/et_Content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="  来一些虚假的描述或许更能吸引他人的尝试哟！"
        android:layout_marginTop="8dp"
        android:textColorHint="#C9C7C7"
        android:maxLines="10"
        android:maxLength="300"
        android:background="@null"/>

    <ImageButton
        android:id="@+id/imgbtn_getPhoto"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/bg_border"
        android:src="@drawable/ic_getphoto"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="25dp"
        android:text="添加图片"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"/>

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@null"
        android:hint="名称"
        android:textColorHint="@color/c2"
        android:maxLines="1"
        android:maxLength="30"
        android:textSize="14sp"
        android:layout_marginLeft="10dp"
        android:paddingTop="8dp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:text="地点"/>
        <ImageButton
            android:id="@+id/imgbtn_getSite"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_right_pic" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"/>




</LinearLayout>